    class VirtualFolder{
        private String folder;
        private ArrayList<String> files = new ArrayList<String>();
        public VirtualFolder(String folder){
            this.folder = folder;
        }
        public void addFile(String filename){
            files.add(filename);
        }
        
        public ArrayList<String> getFiles(){ return this.files; }
        public String getFolderName(){ return this.folder; }
    }
    private class ViewItem implements ListSelectionListener{

        public void valueChanged(ListSelectionEvent e) {
            String item = (String) jList1.getSelectedValue();
            if(item.contains(".png")){
                try {
                    showImage(item);
                } catch (IOException ex) {
                    Logger.getLogger(Archive.class.getName()).log(Level.SEVERE, null, ex);
                }
            }else if(item.contains(".dat")){
                try{
                    showData(item);
                }catch(IOException io){

                }
            }
        }
    }

    private void showData(String item) throws FileNotFoundException, IOException{
        jLabel1.setVisible(false);
        jTextArea1.setVisible(true);
        BufferedReader br = new BufferedReader(new FileReader(new File(item)));

        String s = null;
        String tmp = null;
        while((s = br.readLine()) != null){
            tmp += s+"\n\r";
        }
        br.close();
        jTextArea1.setText(tmp);

    }
    private void showImage(String item) throws IOException{
         jLabel1.setVisible(true);
         jTextArea1.setVisible(false);
         BufferedImage image;
                image = ImageIO.read(new File(item));
                jLabel1.setIcon(new ImageIcon(image));

        
    }
